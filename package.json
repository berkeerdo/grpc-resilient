{
  "name": "grpc-resilient",
  "version": "1.1.0",
  "description": "Production-ready gRPC client with retry, reconnection, fallback cache, and metrics for Node.js microservices and API gateways",
  "author": "berkeerdo",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./gateway": {
      "import": "./dist/gateway/index.js",
      "types": "./dist/gateway/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "grpc",
    "grpc-client",
    "resilient",
    "retry",
    "reconnection",
    "circuit-breaker",
    "fallback-cache",
    "microservices",
    "api-gateway",
    "gateway",
    "proxy",
    "bff",
    "tls",
    "mtls",
    "typescript",
    "nodejs",
    "grpc-js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/berkeerdo/grpc-resilient"
  },
  "bugs": {
    "url": "https://github.com/berkeerdo/grpc-resilient/issues"
  },
  "homepage": "https://github.com/berkeerdo/grpc-resilient#readme",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist coverage docs",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/*.test.ts",
    "test:integration": "vitest run tests/integration/*.test.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "bench": "tsx benchmarks/run.ts",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "lru-cache": "^11.0.0"
  },
  "peerDependencies": {
    "@grpc/grpc-js": ">=1.9.0",
    "@grpc/proto-loader": ">=0.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.7.15",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.0",
    "semantic-release": "^24.0.0",
    "tsx": "^4.19.0",
    "typedoc": "^0.27.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
